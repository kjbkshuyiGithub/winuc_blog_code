# 数据库连接
DATABASE_URL="mysql://username:password@localhost:3306/blog_db"

# NextAuth.js 配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# 邮件服务配置
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email-username"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@yourdomain.com"

# Resend 邮件配置
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"
VERIFICATION_CODE_EXPIRY=10 # 验证码有效期（分钟）

# reCAPTCHA (用于人机验证)
RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"

# OAuth 提供商 (可选)
GITHUB_ID="your-github-id"
GITHUB_SECRET="your-github-secret"
GOOGLE_ID="your-google-id"
GOOGLE_SECRET="your-google-secret"

# 上传服务 (可选，用于图片上传)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# 安全配置
RATE_LIMIT_WINDOW=60000 # 1分钟
RATE_LIMIT_MAX=100 # 最大请求数

# 网站配置
SITE_URL="https://yourdomain.com"
SITE_NAME="团队博客"
SITE_DESCRIPTION="我们团队的官方博客，分享最新的技术文章、团队动态和行业见解。"
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"

# 分析工具配置 - 可选
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# UMAMI_WEBSITE_ID=your-umami-website-id
# UMAMI_URL=https://analytics.yourdomain.com

# 开发环境配置
NODE_ENV="development" 